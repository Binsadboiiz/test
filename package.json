{
  "name": "my-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start:frontend": "npm --workspace frontend run dev",
    "start:backend": "npm --workspace backend run dev",
    "dev": "concurrently \"npm --workspace frontend run dev\" \"npm --workspace backend run dev\"",
    "build:frontend": "npm --workspace frontend run build",
    "start": "npm --workspace backend run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
